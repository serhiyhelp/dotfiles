#!/bin/sh

case $BLOCK_BUTTON in
    1) xkb-switch -n ;;
	3)
		setxkbmap -option caps:swapescape -option grp:win_space_toggle -option grp:switch -layout "us,ua" -variant ",winkeys"
		xmodmap -e "keycode 107 = Multi_key"
		;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case $(xkb-switch) in
	'us') echo -e "üê• eng\x02" ;;
	*) echo -e "üê• —É–∫—Ä\x02" ;;
esac
